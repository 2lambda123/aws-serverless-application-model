{
 "Resources": {
  "SuperCoolAPI": {
   "Type": "AWS::AppSync::GraphQLApi",
   "Properties": {
    "Name": "SuperCoolAPI",
    "Tags": [
     {
      "Key": "key1",
      "Value": "value1"
     },
     {
      "Key": "key2",
      "Value": "value2"
     }
    ],
    "XrayEnabled": true,
    "AuthenticationType": "AWS_IAM"
   }
  },
  "SuperCoolAPISchema": {
   "Type": "AWS::AppSync::GraphQLSchema",
   "Properties": {
    "ApiId": {
     "Fn::GetAtt": [
      "SuperCoolAPI",
      "ApiId"
     ]
    },
    "Definition": "type Mutation {\n  addTodo(id: ID!, name: String, description: String, priority: Int): Todo\n}\n"
   }
  },
  "SuperCoolDataSource": {
   "Type": "AWS::AppSync::DataSource",
   "Properties": {
    "ApiId": {
     "Fn::GetAtt": [
      "SuperCoolAPI",
      "ApiId"
     ]
    },
    "Description": "This is a datasource",
    "Name": "CoolName",
    "Type": "AMAZON_DYNAMODB",
    "ServiceRoleArn": "role-arn",
    "DynamoDBConfig": {
     "TableName": "MyNotes-notes-table",
     "AwsRegion": "na-west-2",
     "DeltaSyncConfig": {
      "BaseTableTTL": "60",
      "DeltaSyncTableName": "some-table",
      "DeltaSyncTableTTL": "60"
     },
     "UseCallerCredentials": true,
     "Versioned": true
    }
   }
  }
 }
}