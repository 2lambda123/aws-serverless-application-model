{
  "Resources": {
    "CanaryWithDefinedArtifactLocation": {
      "Type": "AWS::Synthetics::Canary",
      "Properties": {
        "ArtifactS3Location": "s3://hello",
        "Code": {
          "S3Bucket": "sam-bucket",
          "S3Key": "hello.zip",
          "Handler": "hello.handler"
        },
        "ExecutionRoleArn": "hello",
        "Name": "canary1",
        "RuntimeVersion": "python2.7",
        "Schedule": {
          "Expression": "rate(0 minutes)"
        },
        "StartCanaryAfterCreation": true,
        "Tags": [
          {
            "Key": "lambda:createdBy",
            "Value": "SAM"
          }
        ]
      }
    },
    "FirstCanaryWithNoArtifactLocation": {
      "Type": "AWS::Synthetics::Canary",
      "Properties": {
        "ArtifactS3Location": {
          "Fn::Join": [
            "",
            [
              "s3://",
              {
                "Ref": "FirstCanaryWithNoArtifactLocationArtifactBucket"
              }
            ]
          ]
        },
        "Code": {
          "Handler": "hello.handler",
          "Script": "hello"
        },
        "ExecutionRoleArn": "hello",
        "Name": "canary2",
        "RuntimeVersion": "python2.7",
        "Schedule": {
          "Expression": "rate(0 minutes)"
        },
        "StartCanaryAfterCreation": true,
        "Tags": [
          {
            "Key": "lambda:createdBy",
            "Value": "SAM"
          }
        ]
      }
    },
    "FirstCanaryWithNoArtifactLocationArtifactBucket": {
      "Type": "AWS::S3::Bucket",
      "DeletionPolicy": "Retain",
      "Properties": {
        "BucketEncryption": {
          "ServerSideEncryptionConfiguration": [
            {
              "ServerSideEncryptionByDefault": {
                "SSEAlgorithm": "AES256"
              }
            }
          ]
        }
      }
    },
    "SecondCanaryWithNoArtifactLocation": {
      "Type": "AWS::Synthetics::Canary",
      "Properties": {
        "ArtifactS3Location": {
          "Fn::Join": [
            "",
            [
              "s3://",
              {
                "Ref": "SecondCanaryWithNoArtifactLocationArtifactBucket"
              }
            ]
          ]
        },
        "Code": {
          "Handler": "hello.handler",
          "Script": "hello"
        },
        "ExecutionRoleArn": "hello",
        "Name": "canary3",
        "RuntimeVersion": "python2.7",
        "Schedule": {
          "Expression": "rate(0 minutes)"
        },
        "StartCanaryAfterCreation": true,
        "Tags": [
          {
            "Key": "lambda:createdBy",
            "Value": "SAM"
          }
        ]
      }
    },
    "SecondCanaryWithNoArtifactLocationArtifactBucket": {
      "Type": "AWS::S3::Bucket",
      "DeletionPolicy": "Retain",
      "Properties": {
        "BucketEncryption": {
          "ServerSideEncryptionConfiguration": [
            {
              "ServerSideEncryptionByDefault": {
                "SSEAlgorithm": "AES256"
              }
            }
          ]
        }
      }
    }
  }
}