        "ArtifactS3Location": "s3://test",
        "Code": {
          "S3Bucket": "sam-bucket",
          "S3Key": "hello.zip",
          "Handler": "hello.handler"
        },
        "ExecutionRoleArn": {
          "Fn::GetAtt": [
            "CanaryWithTracingRole",
            "Arn"
