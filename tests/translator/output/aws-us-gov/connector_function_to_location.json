{
  "Resources": {
    "MyConnectorPolicy": {
      "Metadata": {
        "aws:sam:connectors": {
          "MyConnector": {
            "Destination": {
              "Type": "AWS::Location::PlaceIndex"
            },
            "Source": {
              "Type": "AWS::Serverless::Function"
            }
          }
        }
      },
      "Properties": {
        "PolicyDocument": {
          "Statement": [
            {
              "Action": [
                "geo:SearchPlaceIndexForText",
                "geo:DescribeMap",
                "geo:BatchGetDevicePosition",
                "geo:ListDevicePositions",
                "geo:GetMapGlyphs",
                "geo:ListTagsForResource",
                "geo:GetDevicePositionHistory",
                "geo:DescribeTracker",
                "geo:GetMapSprites",
                "geo:GetMapStyleDescriptor",
                "geo:ListGeofences",
                "geo:CalculateRouteMatrix",
                "geo:GetDevicePosition",
                "geo:CalculateRoute",
                "geo:GetGeofence",
                "geo:DescribePlaceIndex",
                "geo:SearchPlaceIndexForSuggestions",
                "geo:DescribeGeofenceCollection",
                "geo:SearchPlaceIndexForPosition",
                "geo:GetPlace",
                "geo:ListTrackerConsumers",
                "geo:DescribeRouteCalculator",
                "geo:GetMapTile"
              ],
              "Effect": "Allow",
              "Resource": [
                "arn:aws:geo:us-east-1:123123123123:place-index/explore.place"
              ]
            }
          ],
          "Version": "2012-10-17"
        },
        "Roles": [
          {
            "Ref": "MyFunctionRole"
          }
        ]
      },
      "Type": "AWS::IAM::ManagedPolicy"
    },
    "MyFunction": {
      "Properties": {
        "Code": {
          "ZipFile": "const AWS = require('aws-sdk');\nexports.handler = async (event) => {\n  console.log(JSON.stringify(event));\n};\n"
        },
        "Handler": "index.handler",
        "Role": {
          "Fn::GetAtt": ["MyFunctionRole", "Arn"]
        },
        "Runtime": "nodejs14.x",
        "Tags": [
          {
            "Key": "lambda:createdBy",
            "Value": "SAM"
          }
        ]
      },
      "Type": "AWS::Lambda::Function"
    },
    "MyFunctionRole": {
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Action": ["sts:AssumeRole"],
              "Effect": "Allow",
              "Principal": {
                "Service": ["lambda.amazonaws.com"]
              }
            }
          ],
          "Version": "2012-10-17"
        },
        "ManagedPolicyArns": [
          "arn:aws-us-gov:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
        ],
        "Tags": [
          {
            "Key": "lambda:createdBy",
            "Value": "SAM"
          }
        ]
      },
      "Type": "AWS::IAM::Role"
    }
  }
}
