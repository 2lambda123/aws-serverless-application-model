{
  "Resources": {
    "FunctionA": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": "sam-demo-bucket",
          "S3Key": "hello.zip",
          "S3ObjectVersion": "3Tcgv52_0GaDvhDva4YciYeqRyPnpIcO"
        },
        "Handler": "hello.handler",
        "Role": {
          "Fn::GetAtt": [
            "FunctionARole",
            "Arn"
          ]
        },
        "Runtime": "python2.7",
        "Tags": [
          {
            "Key": "lambda:createdBy",
            "Value": "SAM"
          }
        ]
      }
    },
    "FunctionARole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              }
            }
          ]
        },
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
        ],
        "Tags": [
          {
            "Key": "lambda:createdBy",
            "Value": "SAM"
          }
        ]
      }
    },
    "FunctionAOnTerminate2": {
      "Type": "AWS::Events::Rule",
      "Properties": {
        "EventBusName": "EventBusName",
        "EventPattern": {
          "detail": {
            "state": [
              "terminated"
            ]
          }
        },
        "Targets": [
          {
            "Arn": {
              "Fn::GetAtt": [
                "FunctionA",
                "Arn"
              ]
            },
            "Id": "FunctionAOnTerminate2LambdaTarget"
          }
        ]
      }
    },
    "FunctionAOnTerminate2Permission": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "Action": "lambda:InvokeFunction",
        "FunctionName": {
          "Ref": "FunctionA"
        },
        "Principal": "events.amazonaws.com",
        "SourceArn": {
          "Fn::GetAtt": [
            "FunctionAOnTerminate2",
            "Arn"
          ]
        }
      }
    },
    "FunctionB": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": "sam-demo-bucket",
          "S3Key": "hello.zip",
          "S3ObjectVersion": "3Tcgv52_0GaDvhDva4YciYeqRyPnpIcO"
        },
        "Handler": "hello.handler",
        "Role": {
          "Fn::GetAtt": [
            "FunctionBRole",
            "Arn"
          ]
        },
        "Runtime": "python2.7",
        "Tags": [
          {
            "Key": "lambda:createdBy",
            "Value": "SAM"
          }
        ]
      }
    },
    "FunctionBRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              }
            }
          ]
        },
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
        ],
        "Tags": [
          {
            "Key": "lambda:createdBy",
            "Value": "SAM"
          }
        ]
      }
    },
    "FunctionBOnTerminate": {
      "Type": "AWS::Events::Rule",
      "Properties": {
        "EventBusName": {
          "Fn::Join": [
            ":",
            [
              "Event",
              "Bus",
              "Name"
            ]
          ]
        },
        "EventPattern": {
          "Fn::GetAtt": [
            "ScheduledFunction",
            "Events.FunctionA.Properties.Pattern"
          ]
        },
        "Targets": [
          {
            "Arn": {
              "Fn::GetAtt": [
                "FunctionB",
                "Arn"
              ]
            },
            "Id": "FunctionBOnTerminateLambdaTarget",
            "Input": {
              "Fn::Sub": "InputValue"
            },
            "InputPath": {
              "Fn::Sub": "InputPathValue"
            }
          }
        ]
      }
    },
    "FunctionBOnTerminatePermission": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "Action": "lambda:InvokeFunction",
        "FunctionName": {
          "Ref": "FunctionB"
        },
        "Principal": "events.amazonaws.com",
        "SourceArn": {
          "Fn::GetAtt": [
            "FunctionBOnTerminate",
            "Arn"
          ]
        }
      }
    }
  }
}