{
  "Resources": {
    "MyCanaryRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyName": "root",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": "*",
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    },
    "CanaryWithRoleDefined": {
      "Type": "AWS::Synthetics::Canary",
      "Properties": {
        "ArtifactS3Location": "s3://foo",
        "Code": {
          "Handler": "hello.handler",
          "Script": "hello"
        },
        "ExecutionRoleArn": {
          "Fn::GetAtt": [
            "MyCanaryRole",
            "Arn"
          ]
        },
        "Name": "canary1",
        "RuntimeVersion": "python2.7",
        "Schedule": {
          "Expression": "rate(0 minutes)"
        },
        "StartCanaryAfterCreation": true,
        "Tags": [
          {
            "Key": "lambda:createdBy",
            "Value": "SAM"
          }
        ]
      }
    },
    "CanaryWithRoleAndPoliciesDefined": {
      "Type": "AWS::Synthetics::Canary",
      "Properties": {
        "ArtifactS3Location": "s3://foo",
        "Code": {
          "Handler": "hello.handler",
          "Script": "hello"
        },
        "ExecutionRoleArn": {
          "Fn::GetAtt": [
            "MyCanaryRole",
            "Arn"
          ]
        },
        "Name": "canary2",
        "RuntimeVersion": "python2.7",
        "Schedule": {
          "Expression": "rate(0 minutes)"
        },
        "StartCanaryAfterCreation": true,
        "Tags": [
          {
            "Key": "lambda:createdBy",
            "Value": "SAM"
          }
        ]
      }
    }
  }
}