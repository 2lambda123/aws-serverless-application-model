{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "HelloWorldFnRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "ManagedPolicyArns": [
          "arn:aws-cn:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole",
          "arn:aws-cn:iam::aws:policy/service-role/AWSLambdaKinesisExecutionRole"
        ],
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              }
            }
          ]
        }
      }
    },
    "HelloWorldFnStream": {
      "Type": "AWS::Lambda::EventSourceMapping",
      "Properties": {
        "MaximumBatchingWindowInSeconds": 20,
        "EventSourceArn": {
          "Fn::GetAtt": [
            "GreetingStream",
            "Arn"
          ]
        },
        "FunctionName": {
          "Ref": "HelloWorldFn"
        },
        "StartingPosition": "LATEST"
      }
    },
    "GreetingStream": {
      "Type": "AWS::Kinesis::Stream",
      "Properties": {
        "ShardCount": 1
      }
    },
    "HelloWorldFn": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "ZipFile": "\nexports.handler = async (event) => {\n    return {\n    statusCode: 200,\n    body: JSON.stringify(event),\n    headers: {}\n    }\n}\n"
        },
        "Tags": [
          {
            "Value": "SAM",
            "Key": "lambda:createdBy"
          }
        ],
        "Handler": "index.handler",
        "Role": {
          "Fn::GetAtt": [
            "HelloWorldFnRole",
            "Arn"
          ]
        },
        "Timeout": 10,
        "Runtime": "nodejs8.10"
      }
    }
  },
  "Description": "EventSourceMapping example"
}