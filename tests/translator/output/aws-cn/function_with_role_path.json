{
  "Resources": {
    "MinimalFunctionRole": {
      "Type": "AWS::IAM::Role", 
      "Properties": {
        "Path": "/customer/", 
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17", 
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ], 
              "Effect": "Allow", 
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              }
            }
          ]
        }, 
        "ManagedPolicyArns": [
          "arn:aws-cn:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
        ], 
        "Tags": [
          {
            "Value": "SAM", 
            "Key": "lambda:createdBy"
          }
        ]
      }
    }, 
    "MinimalFunction": {
      "Type": "AWS::Lambda::Function", 
      "Properties": {
        "Handler": "hello.handler", 
        "Code": {
          "S3Bucket": "sam-demo-bucket", 
          "S3Key": "hello.zip"
        }, 
        "Role": {
          "Fn::GetAtt": [
            "MinimalFunctionRole", 
            "Arn"
          ]
        }, 
        "Runtime": "python2.7", 
        "Tags": [
          {
            "Value": "SAM", 
            "Key": "lambda:createdBy"
          }
        ]
      }
    }
  }
}